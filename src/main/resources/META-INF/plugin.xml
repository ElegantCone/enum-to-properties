<idea-plugin>
    <id>plugin.EnumToProperties</id>
    <name>EnumToProperties</name>
    <description>Плагин для отображения того, что скрыто за enum в .properties</description>
    <version>1.0</version>
    <vendor>ElegantCone</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.java</depends>

    <extensions defaultExtensionNs="com.intellij">
        <editorFactoryMouseMotionListener implementation="ru.gayn.plugin.EnumTooltipProvider"/>
    </extensions>

</idea-plugin>
